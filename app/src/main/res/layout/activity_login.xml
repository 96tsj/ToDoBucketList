<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_logo_my"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간편하게 로그인 해보세요"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"
        android:fontFamily="@font/cookierunblack"/>

    <LinearLayout
        android:id="@+id/layout_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="16dp"
        android:gravity="center">
        
        <ImageView
            android:id="@+id/iv_btn_login_kakao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_kakako"/>

        <ImageView
            android:id="@+id/iv_btn_login_google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_google"/>

        <ImageView
            android:id="@+id/iv_btn_login_naver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_naver"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_btn_nologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:text="로그인 없이 이용하기"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:padding="8dp"
        android:fontFamily="@font/cookierunblack"/>



</LinearLayout>